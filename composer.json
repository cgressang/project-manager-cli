{
    "name": "cgressang/project-manager-cli",
    "description": "CLI Project Manager app in PHP",
    "license": "MIT",
    "require": {
        "symfony/console": "^5.3",
        "symfony/filesystem": "^5.3",
        "symfony/process": "^5.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "mockery/mockery": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "Pmc\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
             "Pmc\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always"
    }
}
